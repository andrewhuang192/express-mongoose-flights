<%- include('../partials/header'); %>
<h1>Add Flight</h1>
<form id="new-form" action="/flights" method="POST">
    <label>Airline:</label>
    <select type="text" name="airline">
        <option value="American">American</option>
        <option value="Southwest" selected>Southwest</option>
        <option value="United">United</option>
    </select>
    
    <label>Airport:</label>
    <select type="text" name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    
    <label>Flight Number: </label>
    <input type="text" name="flightNo">
    
    <label>Date:</label>
    <input value="<%= destDate %>" type="datetime-local" name="departs"></input>

    <input type="submit" value="Add Flight">
    <p><%= destDate %></p>
</form>
  

<%- include('../partials/footer'); %>
